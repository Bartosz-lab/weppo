<% } else if(user_role === role.Seller) { %> 
    
    <div class="richbutton">
        <a href="/order">Zamówienia</a>
    </div>

<% } else if(user_role === role.Customer) { %> 
        Aktywne zamówienia:<br>

        <% for( i in orders ) { %>
        
        <div class="prodcontener" style="width:auto" onclick="location.href='/order/<%-orders[i].id %>'"> 
            <div class="nodecor" style="text-align: left"> Data złożenia: </div>
            <div class="nodecor" style="text-align: right;"><%- orders[i].date %></div>
            <div class="nodecor" style="text-align: left;">Cena: </div>
            <div class="nodecor" style="text-align: right;"><%- orders[i].price %>zł</div>
        </div>
    <% } %>

    <div class="richbutton">
        <a href="/order/">Historia zamówień</a>
    </div>
<% } %> 
