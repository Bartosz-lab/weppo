<!DOCTYPE html>
<html lang="en">
<%- include('./template/head') %>
<body id="body">
<%- include('./template/topbar') %>

<div class ="contener">
  Zamówienie numer: <%- order.id %><br><br>
  <% for(let product of order.products) { 
    product.mode = 2; %>
    <%- include('./components/wide-item', product) %>
  <% } %>

  <% if ( order.products.length != 0 ) { %>
    <br><br>
    Dane do wysyłki: <br><br>
    <div class="column">
      Imię:<br>
      Nazwisko:<br>
      Numer telefonu:<br>
      Email:<br>
    </div>
    <div class="column" style="width:60%">
      <%- order.user_info.name %><br>
      <%-  order.user_info.surname %><br>
      <%-  order.user_info.phone %><br>
     <%- order.user_info.email %><br>
    </div>
    <div style="clear:both"></div>
    <br><br>
    <div class="column">
      Ulica:<br>
      Numer domu:<br>
      Numer mieszkania:<br>
      Kod pocztowy:<br>
      Miasto:<br>
      Kraj:<br>
    </div>    
    <div class="column" style="width:60%">
      <%- order.address.street %><br>
      <%- order.address.nr_house %><br>
      <%- order.address.nr_flat %><br>
      <%- order.address.zip_code %><br>
      <%- order.address.city %><br>
      <%- order.address.country %><br>
    </div>
    <div style="clear:both"></div>
    <br>Całkowity koszt: <%- order.price %> PLN<br><br>
    <br>
  <% } %>


</div>
</body>
</html>