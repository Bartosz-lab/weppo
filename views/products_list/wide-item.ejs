<div class="prodcontener" onclick="location.href='/p/<%= id %>';">
    <div style="float:left">
            <img src=" <%= imgurl %> ">
    </div>
    <div style="float:left; width: 50%; padding-top: 1em;" >
        <div class="item-list-title"> 
            <%= name %>  
        </div>
        <br>
        <div class="item-list-desc"> 
            <% for(let param of params) { %>
                <div> <%= param.key %>: <%= param.value %> </div>
            <% } %>
        </div>
        <br>       
        <div class="item-list-title"> 
            <%= price %>zł
        </div> 
    </div>

    <div style="float:left; width: auto; padding-top: 3em;">
        <% if( mode == 0 ) { %>
            <form>
                <input type="submit" value= "Dodaj do Koszyka">
            </form>
        <% } else if ( mode == 1) { %>
            <form>
                Ilość: <input type="number" value="1">
            </form>
            <form>
                <input type="submit" value="Usuń z koszyka">
            </form>
        <% } else if ( mode == 2) { %>
            Ilość: <br><%= count %><br>
            Cena całkowita: <br><%- price * count %> PLN
        <% } %>
        </div>
    <div style="clear:both"></div>
</div>