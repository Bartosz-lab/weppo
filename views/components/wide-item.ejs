<div class="prodcontener" id="<%= 'cont' + id %>"><!-- PRODCONTENER NIE MOŻE MIEĆ ZDARZENIA ONCLICK BO FORMULARZE NIE BĘDĄ DZIAŁAĆ -->
    <div style="float:left" onclick="location.href='/p/<%= id %>';"> 
            <img src=" <%= imgurl %> ">
    </div>
    <div style="float:left; width: 50%; padding-top: 1em;" onclick="location.href='/p/<%= id %>';">
        <div class="item-list-title"> 
            <%= name %>  
        </div>
        <br>
        <% if( mode == 0 ) { %>
        <div class="item-list-desc"> 
            <% for(let param of params) { %>
                <div> <%= param.key %>: <%= param.value %> </div>
            <% } %>
        </div>
        <br>  
        <% } %>     
        <div class="item-list-title"> 
            <%= price %>zł
        </div> 
    </div>

    <div style="float:left; width: auto; padding-top: 3em;">
        <% if( mode == 0 ) { %>
                <input type="button" value= "Dodaj do Koszyka" onclick="Add_to_basket(<%= id %>)">
        <% } else if ( mode == 1) { %>
            
            Ilość: <input type="number" value="<%= quantity %>" onkeyup="update_product_in_basket(<%= id %>, this.value)" onmouseup="update_product_in_basket(<%= id %>, this.value)">
               
            <input type="button" value="Usuń z koszyka" onclick="update_product_in_basket(<%= id %>, 0)">
            
        <% } else if ( mode == 2) { %>
            Ilość: <br><%= count %><br>
            Cena całkowita: <br><%- price * count %> PLN
        <% } %>
        </div>
    <div style="clear:both"></div>
</div>